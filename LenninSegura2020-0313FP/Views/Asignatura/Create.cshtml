@model Asignatura
<br>
<br>
<br>

<h1 class="display-2">Agregar nueva asignatura</h1>

<br>
<form asp-controller="Asignatura" asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

    <input type="hidden" asp-for="ID" />


    <div class="form-group">
        <label asp-for="Asignatura1">Asignatura</label>
        <input asp-for="Asignatura1" class="form-control">
        <span asp-validation-for="Asignatura1" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="CargaHoraria">Horario</label>
        <input asp-for="CargaHoraria" class="form-control">
        <span asp-validation-for="CargaHoraria" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Agregar</button>


</form>