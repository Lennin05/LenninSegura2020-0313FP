@model List<Asignatura>

<h1 class="display-3">Asignaturas</h1>


<br />
<br />

<div class="btn btn-success"> <a asp-action="Create" asp-controller="Asignatura"><i class="fa-solid fa-floppy-disk"></i>Agregar</a></div>
<br />
<br />
<table class="table">

    <thead>
        <tr>
            <th>Id</th>
            <th>Asignatura</th>
            <th>Horario</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var asignatura in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => asignatura.ID)</td>
                <td>@Html.DisplayFor(m => asignatura.Asignatura1)</td>
                <td>@Html.DisplayFor(m => asignatura.CargaHoraria)</td>
                <td><a class="btn btn-primary" asp-action="Edit" asp-route-id="@asignatura.ID"><i class="fa-solid fa-pen-to-square"></i>Editar</a></td>
                <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@asignatura.ID"><i class="fa-solid fa-trash-can"></i>Eliminar</a></td>

            </tr>

        }

    </tbody>
</table>