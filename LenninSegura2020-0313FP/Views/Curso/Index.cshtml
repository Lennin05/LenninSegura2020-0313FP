@model List<Curso>

<h1 class="display-3">Listado de Cursos</h1>


<br />
<br />

<div class="btn btn-success"> <a asp-action="Create" asp-controller="Curso"><i class="fa-solid fa-floppy-disk"></i>Agregar</a></div>
<br />
<br />
<table class="table">

    <thead>
        <tr>
            <th>Id</th>
            <th>Curso</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var Curso in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => Curso.ID)</td>
                <td>@Html.DisplayFor(m => Curso.Cursos)</td>
                <td><a class="btn btn-primary" asp-action="Edit" asp-route-id="@Curso.ID"><i class="fa-solid fa-pen-to-square"></i>Editar</a></td>
                <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@Curso.ID"><i class="fa-solid fa-trash-can"></i>Eliminar</a></td>

            </tr>

        }

    </tbody>
</table>

